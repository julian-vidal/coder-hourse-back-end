<h1>Product List</h1>

{{#if products}}
<div class="table-responsive">
    <table class="table table-striped align-middle">
        <thead>
            <tr>
                <th scope="col">Name</th>
                <th scope="col">Price</th>
                <th scope="col">Picture</th>
            </tr>
        </thead>
        <tbody>
            {{#each products}}
            <tr>
                <td scope="row">{{this.name}}</th>
                <td>${{this.price}}</td>
                <td><img src={{this.picture}} alt={{this.name}} style="width:50px; height:50px; object-fill:cover" /> </td>
            </tr>
            {{/each}}
        
        </tbody>

    </table>

  </div>

  {{else}}
    <div class="alert alert-warning" role="alert">
        No data was found
    </div>
  
  {{/if}}